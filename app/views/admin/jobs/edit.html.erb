<h1> Edit a job </h1>

<%= simple_form_for [:admin, @job ] do |f| %>
<%= f.collection_select :category_id, Category.all, :id, :name, {promt: "Choose a category"} %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :wage_lower_bound, :label => "薪资下限" %>
<%= f.input :wage_upper_bound, :label => "薪资上限" %>
<%= f.input :contact_email %>
<%= f.input :is_hidden %>
  <%= f.submit "Submit" %>
<% end %>
