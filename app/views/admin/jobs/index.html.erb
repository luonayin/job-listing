<div class="col-md-12" >
  
  <div class="pull-right" >
    <%= link_to("Add a Job", new_admin_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <br><br>
  <table class="table table-hover">
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td>
          <%= render_job_status(job) %>
        <%= link_to(job.title, admin_job_path(job)) %>
        </td>
        <td>
          <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-default") %>
          <%= link_to("Delete", admin_job_path(job), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?"}) %>
        </td>
        <td><%= job.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
